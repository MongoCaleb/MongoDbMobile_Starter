<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/configLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/dbName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="database name"
            android:layout_marginTop="100dp"
        />

        <EditText
            android:id="@+id/collectionName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="collection name"
        />

        <Button
            android:id="@+id/fetchData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="136dp"
            android:text="Get Remote Data"
     />

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/chkSync"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:checked="true"
            android:text="Sync data locally"

     />

        <TextView
            android:id="@+id/stitchIDLabel4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="collection name"
    />

            <TextView
                android:id="@+id/stitchIDLabel3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DB name"
    />


    </LinearLayout>

</ScrollView>
